name 'tar'
org 'amylum'

licenses 'COPYING'

configure_flags(
  prefix: '/usr',
)

harden
cflags %w(-Wno-error=parentheses -Wno-error=unused-value -Wno-error=implicit-fallthrough -Wno-error=format-overflow -Wno-error=abi -Wno-error=stringop-truncation)

build do
  run './bootstrap'
  configure 'FORCE_UNSAFE_CONFIGURE' => '1'
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'tar --version'
end
